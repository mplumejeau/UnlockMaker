              <property name="row-span">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object id="BoxButtonsRight" class="GtkBox">
            <property name="homogeneous">False</property>
            <property name="orientation">vertical</property>
            <layout>
              <property name="column">37</property>
              <property name="row">0</property>
              <property name="column-span">4</property>
            </layout>
            <child>
              <object id="BL1" class="GtkButton">
                <property name="label">Bouton n째1</property>
                <property name="name">RightButton</property>
              </object>
            </child>
            <child>
              <object id="BL2" class="GtkButton">
                <property name="label">Bouton n째2</property>
                <property name="name">RightButton</property>
              </object>
            </child>
            <child>
              <object id="BL3" class="GtkButton">
                <property name="label">Bouton n째3</property>
                <property name="name">RightButton</property>
              </object>
            </child>
            <child>
              <object id="BL4" class="GtkButton">
                <property name="label">Bouton n째4</property>
                <property name="name">RightButton</property>
              </object>
            </child>
          </object>
        </child>
      </object>



