<!-- This is an example of an XML description displaying a window and 3 buttons -->
<interface>
  <object id="window" class="GtkWindow">
    <property name="title">Example window</property>
    <child>
      <object id="generalGrid" class="GtkGrid">
        <property name="column-homogeneous">True</property>
        <property name="row-homogeneous">True</property>
        <child>
          <object id="buttonHello" class="GtkButton">
            <property name="label">Left Space</property>
